{
  "extends": "@portfolio/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost", "WebWorker"],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": [
    ".",
    "index.d.ts",
    "global.d.ts",
    "next-env.d.ts",
    "next.config.mjs",
    "postcss.config.mjs",
    "tailwind.config.ts",
    "src/**/*.tsx",
    "src/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "public/**/*.js"]
}
