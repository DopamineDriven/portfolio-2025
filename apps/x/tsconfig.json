{
  "extends": "@portfolio/tsconfig/next.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": [
    ".",
    "index.d.ts",
    "global.d.ts",
    "next-env.d.ts",
    "next.config.ts",
    "postcss.config.mjs",
    "tailwind.config.ts",
    "**/*.tsx",
    "**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["public/**/*.js"]
}
