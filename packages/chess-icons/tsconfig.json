{
  "extends": "@portfolio/tsconfig/react-library.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": "./"
  },
  "include": [
    "**/*.ts",
    "src/**/*.tsx",
    "**/*.mjs",
    "**/*.preset.ts",
    "postcss.config.mjs",
    "index.d.ts",
    "tsup.config.ts",
    "../../reset.d.ts"
  ],
  "exclude": ["dist"]
}
