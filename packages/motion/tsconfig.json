{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@portfolio/tsconfig/react-library.json",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/*"]
    },
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "dist"
  },

  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dist"]
}
