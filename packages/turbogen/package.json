{
  "name": "@portfolio/turbogen",
  "version": "1.0.0",
  "description": "rapidly generate a turbo-powered pnpm workspace via the cli",
  "publishConfig": {
    "access": "public",
    "typesVersions": {
      "*": {
        "*": [
          "dist/*.d.ts",
          "dist/*/index.d.ts"
        ],
        "bin": [
          "dist/bin/init.d.ts"
        ],
        "config": [
          "dist/config/index.d.ts"
        ],
        "types": [
          "dist/types/index.d.ts"
        ]
      }
    }
  },
  "license": "MIT",
  "source": "src/index.ts",
  "bin": {
    "ddturbogen": "dist/bin/init.js"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*.d.ts",
        "dist/*/index.d.ts"
      ],
      "bin": [
        "dist/bin/init.d.ts"
      ],
      "config": [
        "dist/config/index.d.ts"
      ],
      "types": [
        "dist/types/index.d.ts"
      ]
    }
  },
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": true,
  "files": [
    "dist/**/*.{js,cjs,mjs,d.ts,d.cts,d.mts}"
  ],
  "exports": {
    ".": "./dist/index.js",
    "./*": "./dist/*.js",
    "./bin": "./dist/bin/init.js",
    "./config": "./dist/config/index.js",
    "./types": "./dist/types/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "pnpm build",
    "lint": "eslint",
    "clean": "git clean -xdf .turbo dist node_modules",
    "fix": "npm pkg fix"
  },
  "dependencies": {
    "@d0paminedriven/fs": "^4.1.0",
    "@inquirer/core": "^10.1.10",
    "@inquirer/prompts": "^7.5.0",
    "dotenv": "^16.5.0",
    "gradient-string": "^3.0.0"
  },
  "devDependencies": {
    "@inquirer/type": "^3.0.6",
    "@microsoft/api-extractor": "^7.52.7",
    "@swc/core": "^1.11.24",
    "@swc/wasm": "^1.11.24",
    "@portfolio/eslint-config": "workspace:*",
    "@portfolio/prettier-config": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@types/gradient-string": "^1.1.6",
    "@types/node": "^22.15.12",
    "chokidar": "^4.0.3",
    "dotenv-cli": "^8.0.0",
    "dotenv-expand": "^12.0.2",
    "eslint": "latest",
    "jiti": "^2.4.2",
    "prettier": "latest",
    "terser": "^5.39.0",
    "tslib": "latest",
    "tsup": "latest",
    "tsx": "latest",
    "typescript": "latest",
    "typescript-eslint": "latest"
  },
  "prettier": "@turbogen/prettier-config"
}
