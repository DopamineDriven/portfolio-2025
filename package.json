{
  "name": "@portfolio/root",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39",
  "scripts": {
    "build:chess": "turbo build --filter=@portfolio/chess",
    "build:chess-v2": "turbo build --filter=@portfolio/chess-v2",
    "build:chess-icons": "turbo build --filter=@portfolio/chess-icons",
    "build:fs": "turbo build --filter=@portfolio/fs",
    "build:iso-3166-1": "turbo build --filter=@portfolio/iso-3166-1",
    "build:motion": "turbo build --filter=@portfolio/motion",
    "build:pong": "turbo build --filter=@portfolio/pong",
    "build:redis-utils": "turbo build --filter=@portfolio/redis-utils",
    "build:targeted": "pnpm build:chess-icons && pnpm build:fs && pnpm build:motion && pnpm build:iso-3166-1 && pnpm build:redis-utils",
    "build:web": "turbo build --filter=@portfolio/web",
    "build:x": "turbo build --filter=@portfolio/x",
    "changeset": "changeset",
    "clean": "git clean -xdf node_modules",
    "dev": "turbo dev --parallel --continue",
    "format": "prettier --write \"**/*.{ts,tsx,cts,mts,js,jsx,mjs,cjs,json,yaml,yml,css,html,md,mdx}\" --ignore-unknown --cache",
    "lint": "turbo lint",
    "prepare": "husky",
    "typecheck": "turbo typecheck",
    "clean:test": "git clean -xdf -e **/*{node_modules,.next,dist} && pnpm latest:pnpm",
    "clean:house": "cd tooling/eslint && git clean -xdf node_modules .turbo && cd ../prettier && git clean -xdf node_modules .turbo && cd ../typescript && git clean -xdf .turbo node_modules && cd ../jest-presets && git clean -xdf node_modules .turbo && cd ../../apps/web && git clean -xdf .next node_modules  && cd ../chess && git clean -xdf .next node_modules && cd ../pong && git clean -xdf .next node_modules && cd ../x && git clean -xdf .next node_modules &&  cd ../chess-v2 && git clean -xdf .next node_modules && cd ../../packages/chess-icons && git clean -xdf dist node_modules && cd ../motion && git clean -xdf dist node_modules && cd ../fs && git clean -xdf dist node_modules && cd ../iso-3166-1 && git clean -xdf node_modules && cd ../redis-utils && git clean -xdf node_modules &&  cd ../.. && git clean -xdf node_modules pnpm-lock.yaml && pnpm install && pnpm build:targeted",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "generate:base64": "openssl rand -base64 64",
    "generate:hex": "openssl rand -hex 64",
    "npm:registry": "npm set registry https://registry.npmjs.org",
    "redis:cli": "docker exec -it portfolio_redis redis-cli",
    "run:chess": "turbo dev --filter=@portfolio/chess",
    "run:chess-v2": "turbo dev --filter=@portfolio/chess-v2",
    "run:pong": "turbo dev --filter=@portfolio/pong",
    "run:web": "turbo dev --filter=@portfolio/web",
    "run:x": "turbo dev --filter=@portfolio/x",
    "run:docker:web": "pnpm docker:up && pnpm run:web",
    "sync:time": "sudo ntpdate time.windows.com",
    "latest:pnpm": "corepack use pnpm@latest",
    "update:pnpm": "curl -fsSL https://get.pnpm.io/install.sh | sh -",
    "restore:git": "java -jar ../../bfg.jar --delete-files 'Rubber001_8K-JPG_NormalGL.jpg'",
    "wsl2:version": "lsb_release -d"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.2",
    "@d0paminedriven/turbogen": "^0.6.0",
    "@portfolio/prettier-config": "workspace:*",
    "@types/node": "^22.15.3",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "dotenv-cli": "^8.0.0",
    "dotenv-expand": "^12.0.2",
    "husky": "^9.1.7",
    "prettier": "latest",
    "tsx": "latest",
    "turbo": "latest",
    "typescript": "latest",
    "vercel": "latest"
  },
  "prettier": "@portfolio/prettier-config",
  "engines": {
    "node": ">=22",
    "npm": ">=11",
    "pnpm": ">=9"
  },
  "pnpm": {
    "patchedDependencies": {
      "tailwindcss": "patches/tailwindcss.patch",
      "unified@11.0.5": "patches/unified@11.0.5.patch",
      "leva": "patches/leva.patch"
    }
  }
}
