{
  "name": "@portfolio/root",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@10.4.1+sha512.c753b6c3ad7afa13af388fa6d808035a008e30ea9993f58c6663e2bc5ff21679aa834db094987129aa4d488b86df57f7b634981b2f827cdcacc698cc0cfb88af",
  "scripts": {
    "build:chess": "turbo build --filter=@portfolio/chess",
    "build:chess-v2": "turbo build --filter=@portfolio/chess-v2",
    "build:chess-icons": "turbo build --filter=@portfolio/chess-icons",
    "build:fs": "turbo build --filter=@portfolio/fs",
    "build:iso-3166-1": "turbo build --filter=@portfolio/iso-3166-1",
    "build:redis-utils": "turbo build --filter=@portfolio/redis-utils",
    "build:targeted": "pnpm build:chess-icons && pnpm build:fs && pnpm build:iso-3166-1 && pnpm build:redis-utils",
    "build:web": "turbo build --filter=@portfolio/web",
    "changeset": "changeset",
    "clean": "git clean -xdf node_modules",
    "dev": "turbo dev --parallel --continue",
    "format": "prettier --write \"**/*.{ts,tsx,cts,mts,js,jsx,mjs,cjs,json,yaml,yml,css,html,md,mdx}\" --ignore-unknown --cache",
    "lint": "turbo lint",
    "prepare": "husky",
    "typecheck": "turbo typecheck",
    "clean:test": "git clean -xdf -e **/*{node_modules,.next,dist} && pnpm latest:pnpm",
    "clean:house": "cd tooling/eslint && git clean -xdf node_modules .turbo && cd ../prettier && git clean -xdf node_modules .turbo && cd ../typescript && git clean -xdf .turbo node_modules && cd ../jest-presets && git clean -xdf node_modules .turbo && cd ../../apps/web && git clean -xdf .next node_modules  && cd ../chess && git clean -xdf .next node_modules && cd ../chess-v2 && git clean -xdf .next node_modules && cd ../../packages/chess-icons && git clean -xdf dist node_modules && cd ../fs && git clean -xdf dist node_modules && cd ../iso-3166-1 && git clean -xdf node_modules && cd ../redis-utils && git clean -xdf node_modules &&  cd ../.. && git clean -xdf node_modules pnpm-lock.yaml && pnpm install && pnpm build:targeted",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "generate:base64": "openssl rand -base64 64",
    "generate:hex": "openssl rand -hex 64",
    "npm:registry": "npm set registry https://registry.npmjs.org",
    "redis:cli": "docker exec -it portfolio_redis redis-cli",
    "run:chess": "turbo dev --filter=@portfolio/chess",
    "run:chess-v2": "turbo dev --filter=@portfolio/chess-v2",
    "run:web": "turbo dev --filter=@portfolio/web",
    "run:docker:web": "pnpm docker:up && pnpm run:web",
    "sync:time": "sudo ntpdate time.windows.com",
    "latest:pnpm": "corepack use pnpm@latest",
    "update:pnpm": "curl -fsSL https://get.pnpm.io/install.sh | sh -"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@d0paminedriven/turbogen": "^0.6.0",
    "@portfolio/eslint-config": "workspace:*",
    "@portfolio/prettier-config": "workspace:*",
    "@portfolio/tsconfig": "workspace:*",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^22.13.5",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "dotenv-expand": "^12.0.1",
    "eslint": "latest",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "prettier": "latest",
    "tsx": "latest",
    "turbo": "latest",
    "typescript": "latest",
    "vercel": "latest"
  },
  "prettier": "@portfolio/prettier-config",
  "engines": {
    "node": ">=22",
    "npm": ">=11",
    "pnpm": ">=9"
  },
  "pnpm": {
    "patchedDependencies": {
      "rehype-pretty-code": "patches/rehype-pretty-code.patch",
      "tailwindcss": "patches/tailwindcss.patch"
    }
  }
}
